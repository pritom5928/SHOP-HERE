<script type="text/javascript">

    $(document).ready(function () {

        var productCartList;
        $(".productAddToCart").click(function () {

            var existingProductsInCartCookies = $.cookie('Cartproducts');
            if (existingProductsInCartCookies != null && existingProductsInCartCookies != "" && existingProductsInCartCookies != undefined) {
                productCartList = existingProductsInCartCookies.split('-');
            }

            else {
                productCartList = [];
            }

            var productid = $(this).attr('product-id');

            productCartList.push(productid);

            $.cookie('Cartproducts', productCartList.join('-'), { path: '/' });

            updateproductCartCounter();

            swal("Done!", "product Added to Cart Successfully!", "success");

        });

        var listOfBestSellItems = $("#BestSellproduct li");

        for (var i = 1; i <= listOfBestSellItems.length; i++) {
            N = 5;
            if (i > N) {
                $("#BestSellproduct li:nth-child(" + i + ") a").css("bproduct-left", "1px solid rgba(110,110,110,0.5)");
                N += N;
            }
        }

    });

</script>